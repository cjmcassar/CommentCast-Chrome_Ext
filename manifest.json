{
	"version": "0.0.1",
	"manifest_version": 3,
	"name": "commentcast",
	"description": "commentcast is a tool that allows users to make comments directly on your website.",
	"action": {
		"default_popup": "js/index.html",
		"default_title": "commentcast"
	},
	"permissions": [
		"scripting",
		"nativeMessaging",
		"activeTab",
		"storage",
		"tabs",
		"background",
		"debugger",
		"cookies"
	],
	"background": {
		"service_worker": "js/background.js",
		"type": "module"
	},
	"host_permissions": ["https://localhost:3000/*"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/content.js"],
			"all_frames": true
		}
	]
}
